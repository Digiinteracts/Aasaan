<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/scrollView">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <com.assan.CircleImageView
            android:id="@+id/iv_upload"
            android:layout_width="@dimen/registration_circulimg_height_width"
            android:layout_height="@dimen/registration_circulimg_height_width"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:background="@drawable/plus_1"
            android:layout_below="@+id/imageview_cross"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/imageview_cross"
            android:layout_width="@dimen/registration_activity_close_image_hight_width"
            android:layout_height="@dimen/registration_activity_close_image_hight_width"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:background="@drawable/close_1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/small_text_size"
            android:layout_marginLeft="@dimen/small_text_size"
            android:layout_alignParentTop="true"
            />


        <Utils.Boldtext
            android:id="@+id/txtlogin_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Create Account"
            android:layout_below="@+id/iv_upload"
            android:textSize="22sp"
            android:paddingTop="@dimen/registration_activity_createaccount_pading_top_bottom"
            android:paddingBottom="@dimen/registration_activity_createaccount_pading_top_bottom"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true" />

        <Utils.RegularText
            android:id="@+id/txtplease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Please login to take benifits of our app and enjoy new features"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginLeft="@dimen/registration_activity_regular_text_pading_left_right"
            android:layout_marginRight="@dimen/registration_activity_regular_text_pading_left_right"
            android:layout_marginTop="@dimen/registration_activity_regular_text_margin_top"
            android:paddingLeft="@dimen/registration_activity_regular_text_pading_left_right"
            android:paddingRight="@dimen/registration_activity_regular_text_pading_left_right"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtlogin_account"
          />
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtplease"
            android:layout_margin="@dimen/small_text_size"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_activity_edit_username_text_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:hint="Enter name"
                android:drawablePadding="3dp"
                android:textSize="@dimen/login_activity_edittext_hint_size"
                android:textColorHint="#aaaaaa"
                android:drawableLeft="@drawable/user_1"
                android:layout_marginBottom="@dimen/registration_activity_txt_username_marginbottom"
                android:background="@drawable/strip"/>
            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_activity_edit_username_text_height"
                android:layout_marginTop="@dimen/registration_activity_txt_email_margin_top"
                android:layout_marginLeft="30dp"
                android:drawablePadding="3dp"
                android:textColorHint="#aaaaaa"
                android:textSize="@dimen/login_activity_edittext_hint_size"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="@dimen/registration_activity_txt_username_marginbottom"
                android:hint="Your email address"
                android:drawableLeft="@drawable/email_1"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/strip"/>

            <EditText
                android:layout_marginBottom="@dimen/registration_activity_txt_username_marginbottom"
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_activity_edit_username_text_height"
                android:layout_marginTop="@dimen/registration_activity_txt_email_margin_top"
                android:layout_marginLeft="30dp"
                android:textColorHint="#aaaaaa"
                android:textSize="@dimen/login_activity_edittext_hint_size"
                android:layout_marginRight="30dp"
                android:hint="Password"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/password_1"
                android:drawablePadding="3dp"
                android:inputType="textPassword"
                android:background="@drawable/strip"/>

            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/login_activity_login_button_pading_left_right"
                android:layout_marginRight="@dimen/login_activity_login_button_pading_left_right"
                android:layout_height="@dimen/login_activity_login_button_hight"
                android:layout_marginTop="@dimen/registration_activity_create_account_margintop"
                android:layout_marginBottom="@dimen/registration_activity_regular_text_margin_top"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/create_btn"
                android:id="@+id/btn_login" />


           <!-- <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"

                    android:layout_marginTop="@dimen/large_text_size"
                    android:text="Forgot password?"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00cc00"

                    android:layout_marginTop="@dimen/large_text_size"
                    android:text=" Click Here"/>
            </LinearLayout>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/registration_activity_fb_gplus_margintop"
                android:layout_marginBottom="@dimen/registration_activity_regular_text_margin_top"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/button_facebook"
                    android:layout_width="@dimen/login_activity_google_fb_hight_widht"
                    android:layout_height="@dimen/login_activity_google_fb_hight_widht"
                    android:layout_marginTop="@dimen/small_text_size"
                    android:background="@drawable/fb_btn"/>

                <ImageView
                    android:id="@+id/button_googlepluse"
                    android:layout_width="@dimen/login_activity_google_fb_hight_widht"
                    android:layout_height="@dimen/login_activity_google_fb_hight_widht"
                    android:layout_marginLeft="@dimen/login_activity_google_plus_padding_left"
                    android:layout_marginTop="@dimen/small_text_size"
                    android:background="@drawable/google_btn"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_marginTop="@dimen/large_text_size"
                    android:text="Already have an account ?"/>
                <TextView
                    android:id="@+id/txt_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00cc00"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_marginTop="@dimen/large_text_size"
                    android:text=" Sign in"/>
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>




    </ScrollView>
    <RelativeLayout
        android:id="@+id/rl_foorte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f1f1"
            android:weightSum="1.0"
            android:paddingBottom="3dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_home"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/home_icon"/>
                <ImageView
                    android:id="@+id/btn_home_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/home_icon_activer"/>
                <Utils.LightText
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size"
                    android:id="@+id/txt_home"
                    android:layout_gravity="center"
                    android:text="@string/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_categorie"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/small_text_size"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_cat"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_categories_hight"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/categories_icon"/>
                <ImageView
                    android:id="@+id/btn_cat_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_categories_hight"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/categories_icon_active"/>
                <Utils.LightText
                    android:layout_marginTop="@dimen/tablayout_icons_categories_pading"
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size"
                    android:id="@+id/txt_category"
                    android:layout_gravity="center"
                    android:text="@string/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bookmark"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"

                android:layout_marginLeft="@dimen/small_text_size"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_bookmark"
                    android:layout_width="22dp"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bookmark_icon"/>

                <ImageView
                    android:id="@+id/btn_bookmark_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:background="@drawable/bookmark_icon_active"/>
                <Utils.LightText
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size"
                    android:id="@+id/txt_bookmark"
                    android:layout_gravity="center"
                    android:text="@string/bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"

                android:layout_marginLeft="@dimen/small_text_size"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_account"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:paddingRight="@dimen/half_margin"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/account_icon"/>

                <ImageView
                    android:id="@+id/btn_account_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:paddingRight="@dimen/half_margin"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/account_icon_active"/>
                <Utils.LightText
                    android:textColor="@color/lightred"
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size"
                    android:id="@+id/txt_account"
                    android:layout_gravity="center"
                    android:text="@string/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_recent"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"

                android:layout_marginLeft="@dimen/small_text_size"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_recent"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:paddingRight="@dimen/half_margin"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/recent_icon"/>

                <ImageView
                    android:id="@+id/btn_recent_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:paddingRight="@dimen/half_margin"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/recent_icon_active"/>
                <Utils.LightText
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size"
                    android:id="@+id/txt_recents"
                    android:layout_gravity="center"
                    android:text="@string/recents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
