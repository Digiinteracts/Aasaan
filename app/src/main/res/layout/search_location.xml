<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/viewfinder_mask"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="0.8"
    android:id="@+id/ll"
    android:layout_height="wrap_content">
    <!-- Editext for Search -->
    <EditText android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/Default_margin_half_half"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="@dimen/normal_text_size"
        android:layout_alignParentLeft="true"
        android:background="@drawable/round_corner_gray"
        android:padding="@dimen/Default_margin_half"
        android:inputType="textVisiblePassword"/>
<RelativeLayout
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="@dimen/Default_margin_half"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_serch_dummy"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/search2"
        android:text="@string/search_location"
        android:textColor="@color/viewfinder_mask"
        android:textSize="@dimen/normal_text_size"
        android:padding="@dimen/Default_margin_half"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:drawablePadding="4dp"
        android:layout_height="wrap_content" />
</RelativeLayout>
</RelativeLayout>
        <TextView
            android:id="@+id/location_cancle"
            android:layout_width="0dp"
            android:layout_marginLeft="-10dp"
            android:layout_weight="0.2"
            android:text="@string/cancel"
            android:layout_gravity="center"
            android:padding="@dimen/Default_margin"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/normal_text_size"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:drawablePadding="@dimen/Default_margin_half"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!-- List View -->
    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>