<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/large_text_size">

                <Utils.Boldtext
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Form"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:id="@+id/contactus"
                    android:textSize="@dimen/large_text_size"/>

                <Utils.RegularText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Got a question for us or you want more info, complete the form below and we will get back to you as soon as possible or at least within 24 hours."
                    android:layout_centerInParent="true"
                    android:id="@+id/text"
                    android:layout_below="@+id/contactus"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/large_text_size"/>
                <ImageView
                    android:id="@+id/imageview_cross"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:background="@drawable/close_1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Utils.RoundedImageView
                    android:id="@+id/iv_upload_VIEW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:visibility="gone"
                    android:background="@drawable/plus_1"
                    android:layout_marginTop="@dimen/large_text_size"
                    android:layout_below="@+id/imageview_cross"
                    android:layout_centerHorizontal="true" />
                <LinearLayout
                    android:id="@+id/ll_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:orientation="vertical">

                    <Utils.RegularText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:layout_marginTop="@dimen/small_text_size"
                        android:textSize="@dimen/large_text_size"
                        android:textColor="@color/white"/>
                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/strip"
                        android:textColorHint="@color/text_gray_color"
                        android:textSize="@dimen/large_text_size"
                        android:hint="Enter name"
                        android:paddingLeft="@dimen/half_margin_plus"
                        android:textColor="@color/grey"
                        android:layout_marginTop="@dimen/half_margin_plus"/>
                    <Utils.RegularText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginTop="@dimen/small_text_size"
                        android:textSize="@dimen/large_text_size"
                        android:textColor="@color/white"/>
                    <EditText
                        android:id="@+id/edt_mail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/strip"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/text_gray_color"
                        android:textSize="@dimen/large_text_size"
                        android:paddingLeft="@dimen/half_margin_plus"
                        android:hint="Enter email"
                        android:layout_marginTop="@dimen/half_margin_plus"/>
                    <Utils.RegularText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact no (+971)"
                        android:layout_marginTop="@dimen/small_text_size"
                        android:textSize="@dimen/large_text_size"
                        android:textColor="@color/white"/>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/strip"
                        android:textColor="@color/grey"
                        android:phoneNumber="true"
                        android:textColorHint="@color/text_gray_color"
                        android:textSize="@dimen/large_text_size"
                        android:paddingLeft="@dimen/half_margin_plus"
                        android:id="@+id/edt_phonno"
                        android:hint="Enter Contact no"
                        android:layout_marginTop="@dimen/half_margin_plus"/>
                    <Utils.RegularText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject"
                        android:layout_marginTop="@dimen/small_text_size"
                        android:textSize="@dimen/large_text_size"
                        android:textColor="@color/white"/>

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/strip"
                        android:textColor="@color/grey"
                        android:hint="Enter subject"
                        android:id="@+id/edit_subject"
                        android:textColorHint="@color/text_gray_color"
                        android:textSize="@dimen/large_text_size"
                        android:paddingLeft="@dimen/half_margin_plus"
                        android:layout_marginTop="@dimen/half_margin_plus"/>

                    <Utils.RegularText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        android:layout_marginTop="@dimen/small_text_size"
                        android:textSize="@dimen/large_text_size"
                        android:textColor="@color/white"/>

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/strip"
                        android:textColor="@color/grey"
                        android:id="@+id/edt_message"
                        android:textColorHint="@color/text_gray_color"
                        android:textSize="@dimen/large_text_size"
                        android:inputType="textMultiLine"
                        android:paddingLeft="@dimen/half_margin_plus"
                        android:layout_marginTop="@dimen/half_margin_plus"/>

                </LinearLayout>
                <Button
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/extra_large_text_size"
                    android:layout_marginBottom="@dimen/extra_large_text_size"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/ll_edit"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/login_button"
                    android:id="@+id/btn_send" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_foorte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f1f1"
            android:weightSum="1.0"
            android:paddingBottom="3dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_home"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/home_icon"/>
                <ImageView
                    android:id="@+id/btn_home_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/home_icon_activer"/>
                <Utils.LightText
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size"
                    android:textColor="@color/more_screen_txt_color"
                    android:id="@+id/txt_home"
                    android:layout_gravity="center"
                    android:text="@string/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_categorie"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/small_text_size"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_cat"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_categories_hight"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/categories_icon"/>
                <ImageView
                    android:id="@+id/btn_cat_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_categories_hight"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/categories_icon_active"/>
                <Utils.LightText
                    android:layout_marginTop="@dimen/tablayout_icons_categories_pading"
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size"
                    android:id="@+id/txt_category"
                    android:layout_gravity="center"
                    android:text="@string/category"
                    android:textColor="@color/more_screen_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bookmark"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"

                android:layout_marginLeft="@dimen/small_text_size"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_bookmark"
                    android:layout_width="@dimen/tablayout_bookmark_icons_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bookmark_icon"/>

                <ImageView
                    android:id="@+id/btn_bookmark_active"
                    android:layout_width="@dimen/tablayout_bookmark_icons_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:background="@drawable/bookmark_icon_active"/>
                <Utils.LightText
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size"
                    android:id="@+id/txt_bookmark"
                    android:layout_gravity="center"
                    android:text="@string/bookmark"
                    android:textColor="@color/more_screen_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"

                android:layout_marginLeft="@dimen/small_text_size"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_account"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:paddingRight="@dimen/half_margin"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/account_icon"/>

                <ImageView
                    android:id="@+id/btn_account_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:paddingRight="@dimen/half_margin"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/account_icon_active"/>
                <Utils.LightText
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size"
                    android:id="@+id/txt_account"
                    android:layout_gravity="center"
                    android:textColor="@color/more_screen_txt_color"
                    android:text="@string/accounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_recent"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/small_text_size"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_recent"
                    android:visibility="gone"
                    android:layout_width="@dimen/tablayout_more_icons_width_"
                    android:layout_height="@dimen/tablayout_more_icons_hight_"
                    android:paddingRight="@dimen/half_margin"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/recent_icon"/>

                <ImageView
                    android:id="@+id/btn_recent_active"
                    android:layout_width="@dimen/tablayout_more_icons_width_"
                    android:layout_height="@dimen/tablayout_more_icons_hight_"
                    android:paddingRight="@dimen/half_margin"
                    android:visibility="visible"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/recent_icon_active"/>
                <Utils.LightText
                    android:textAllCaps="true"
                    android:textColor="@color/lightred"
                    android:textSize="@dimen/tablayout_icons_text_size"
                    android:id="@+id/txt_recents"
                    android:layout_gravity="center"
                    android:text="@string/recents"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
