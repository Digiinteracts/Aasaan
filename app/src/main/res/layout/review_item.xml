<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/Default_margin"
        >
    <com.assan.CircleImageView
        android:id="@+id/iv_review_image"
        android:layout_width="30dp"
        android:src="@drawable/ic_media_play"
        android:layout_height="30dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/Default_margin"
            >
        <TextView
            android:id="@+id/tv_review_name"
            android:text="test Screen"
            android:textSize="13dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_review_for_store"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_below="@id/tv_outlet_name"
                android:layout_toRightOf="@id/imgview"
                android:text="test"
                android:textSize="10dp"
                android:textColor="@color/gray_dark"
                android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_toLeftOf="@id/iv_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/Default_margin_half"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RATED"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/Default_margin_half"
            />
        <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_rating"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:background="@color/green"
        android:textColor="@color/white"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:layout_marginRight="@dimen/Default_margin_half"
        />
        <TextView
            android:id="@+id/tv_time_ago"
            android:layout_width="wrap_content"
            android:text="12"
            android:textColor="@color/gray"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:text="@string/new_store"
            android:padding="@dimen/Default_margin_half"
            android:layout_below="@id/tv_outlet_loc"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:layout_height="wrap_content" />
</LinearLayout>
