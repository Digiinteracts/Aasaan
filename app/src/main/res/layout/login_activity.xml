<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtskip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/small_text_size"
                    android:layout_marginRight="@dimen/margin30"
                    android:layout_marginTop="5dp"
                    android:text="Skip"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <Utils.Boldtext
                android:id="@+id/txtlogin_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                android:text="Login Account"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtplease"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="10dp"

                android:orientation="vertical">

                <Utils.RegularText
                    android:id="@+id/txtplease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtlogin_account"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="7dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/login_activity_txtplease_padding_left_right"
                    android:paddingRight="@dimen/login_activity_txtplease_padding_left_right"
                    android:text="Please login to take benifits of our app and enjoy new features"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/normal_text_size"

                    />


                <EditText
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_activity_edit_username_text_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/login_activity_edittext_username_margin_left_right"
                    android:layout_marginRight="@dimen/login_activity_edittext_username_margin_left_right"
                    android:layout_marginTop="@dimen/login_activity_edittext_username_margin_top"
                    android:background="@drawable/strip"
                    android:drawableLeft="@drawable/email_1"
                    android:textSize="@dimen/login_activity_edittext_hint_size"
                    android:drawablePadding="3dp"

                    android:hint="Your email address"
                    android:textColorHint="#aaaaaa"
                  />

                <EditText
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_activity_edit_username_text_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/login_activity_edittext_username_margin_left_right"
                    android:layout_marginRight="@dimen/login_activity_edittext_username_margin_left_right"
                    android:layout_marginTop="@dimen/login_activity_edittext_password_margin_top"
                    android:background="@drawable/strip"
                    android:drawableLeft="@drawable/password_1"
                    android:drawablePadding="3dp"
                    android:hint="Password"
                    android:textSize="@dimen/login_activity_edittext_hint_size"
                    android:textColorHint="#aaaaaa"
                    android:inputType="textPassword"
                    />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_activity_login_button_hight"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/login_activity_login_button_margin_left_right"
                    android:layout_marginRight="@dimen/login_activity_login_button_margin_left_right"
                    android:layout_marginTop="@dimen/login_activity_login_button_margin_top"
                    android:background="@drawable/login_button"
                    android:text="@string/login_account"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/btn_login_text_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/login_activity_Forgot_pass_margin_top"
                    android:orientation="horizontal">

                    <Utils.RegularText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_text_size"
                        android:text="Forgot password?"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/normal_text_size" />

                    <LinearLayout
                        android:id="@+id/ll_clickhere"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <Utils.RegularText
                            android:id="@+id/txt_click_here"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/large_text_size"
                            android:text=" Click Here"
                            android:textColor="#00cc00"
                            android:textSize="@dimen/normal_text_size" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/login_activity_fb_gp_lyout_mg_bottom"
                    android:layout_marginTop="@dimen/login_activity_fb_gp_lyout_mg_top"
                    android:id="@+id/fb_gp_layout"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/button_facebook"
                        android:layout_width="@dimen/login_activity_google_fb_hight_widht"
                        android:layout_height="@dimen/login_activity_google_fb_hight_widht"
                        android:layout_marginTop="@dimen/normal_text_size"
                        android:background="@drawable/fb_btn" />

                    <ImageView
                        android:id="@+id/button_googlepluse"
                        android:layout_width="@dimen/login_activity_google_fb_hight_widht"
                        android:layout_height="@dimen/login_activity_google_fb_hight_widht"
                        android:layout_marginLeft="@dimen/login_activity_google_plus_padding_left"
                        android:layout_marginTop="@dimen/normal_text_size"
                        android:background="@drawable/google_btn" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Utils.RegularText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_text_size"
                        android:text="Do not have an account ?"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/normal_text_size" />

                    <Utils.RegularText
                        android:id="@+id/txt_createaccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_text_size"
                        android:text=" Create account"
                        android:textColor="#00cc00"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/RL_Drop"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-300dp"
        android:background="@color/white"
        android:padding="@dimen/margin20">

        <TextView
            android:id="@+id/txtview_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forgot Password"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_larg" />


        <TextView
            android:id="@+id/txtskipdrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin1"
            android:text="skip"
            android:textColor="@color/light_red"
            android:textSize="@dimen/text_size_larg" />

        <Utils.RegularText
            android:id="@+id/droptxtplease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtskipdrop"

            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/large_text_size"
            android:gravity="center_horizontal"
            android:text="We'll email you with a link to reset your password.Please enter the email address used to register with App and we'll contact you shortly."
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/droptxtplease"

            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtplease"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/large_text_size"
                android:layout_marginRight="@dimen/large_text_size"
                android:background="@drawable/strip"

                android:drawableLeft="@drawable/email_1"
                android:hint="your email address" />

            <Button
                android:id="@+id/btn_Send"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/txt_username"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/small_text_size"
                android:background="@drawable/login_button"
                android:text="Send"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_foorte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f1f1"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="5dp"
            android:weightSum="1.0">

            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight=".20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_home"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/home_icon" />

                <ImageView
                    android:id="@+id/btn_home_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/home_icon_activer"
                    android:visibility="gone" />

                <Utils.LightText
                    android:id="@+id/txt_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/home"
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_categorie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/small_text_size"

                android:layout_weight=".20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_cat"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_categories_hight"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/categories_icon" />

                <ImageView
                    android:id="@+id/btn_cat_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_categories_hight"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/categories_icon_active"
                    android:visibility="gone" />

                <Utils.LightText
                    android:id="@+id/txt_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/tablayout_icons_categories_pading"
                    android:text="@string/category"
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bookmark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_text_size"

                android:layout_weight=".20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_bookmark"
                    android:layout_width="@dimen/tablayout_bookmark_icons_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bookmark_icon" />

                <ImageView
                    android:id="@+id/btn_bookmark_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bookmark_icon_active"
                    android:visibility="gone" />

                <Utils.LightText
                    android:id="@+id/txt_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/bookmark"
                    android:textAllCaps="true"
                    android:textSize="@dimen/tablayout_icons_text_size" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_text_size"
                android:layout_weight=".20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_account"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/account_icon"
                    android:visibility="gone"
                    android:paddingRight="@dimen/half_margin" />

                <ImageView
                    android:id="@+id/btn_account_active"
                    android:layout_width="@dimen/tablayout_icons_hight_width"
                    android:layout_height="@dimen/tablayout_icons_hight_width"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/account_icon_active"
                    android:paddingRight="@dimen/half_margin"
                    android:visibility="visible" />

                <Utils.LightText
                    android:id="@+id/txt_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/login"
                    android:textAllCaps="true"
                    android:textColor="@color/lightred"
                    android:textSize="@dimen/tablayout_icons_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_recent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_text_size"
                android:layout_weight=".20"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_recent"
                    android:layout_width="@dimen/tablayout_more_icons_width_"
                    android:layout_height="@dimen/tablayout_more_icons_hight_"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/recent_icon"
                    android:paddingRight="@dimen/half_margin" />

                <ImageView
                    android:id="@+id/btn_recent_active"
                    android:layout_width="@dimen/tablayout_more_icons_width_"
                    android:layout_height="@dimen/tablayout_more_icons_hight_"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/recent_icon_active"
                    android:paddingRight="@dimen/half_margin"
                    android:visibility="gone" />

                <Utils.LightText
                    android:id="@+id/txt_recents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/recents"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/tablayout_more_icons_margin_top_"
                    android:textSize="@dimen/tablayout_icons_text_size" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="#00000000"
           android:id="@+id/cover"
           android:layout_marginTop="370dp"
           android:visibility="visible"/>

</RelativeLayout>

